                <thead>
                    <tr align="center">
                        <td>Verb</td>
                        <td>URI</td>
                        <td>Description</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>&GET;</td>
                        <td>/agents</td>
                        <td>List agents which reports their status to quantum server.</td>
                    </tr>
                    <tr>
                        <td>&GET;</td>
                        <td>/agents/<parameter>agent_id</parameter></td>
                        <td>Show information of the given agent.</td>
                    </tr>
                    <tr>
                        <td>&PUT;</td>
                        <td>/agents/<parameter>agent_id</parameter></td>
                        <td>Update the agent's admin status and description.</td>
                    </tr>
                    <tr>
                        <td>&DELETE;</td>
                        <td>/agents/<parameter>agent_id</parameter></td>
                        <td>Delete the given agent.</td>
                    </tr>
                </tbody>
            </informaltable>
